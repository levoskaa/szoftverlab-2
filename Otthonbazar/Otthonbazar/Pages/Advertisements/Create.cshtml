@page
@model Otthonbazar.Pages.Advertisements.CreateModel

@{
    ViewData["Title"] = "Hirdetés feladása";
}

<h2>Hirdetés feladása</h2>

<div class="container">
    <div class="row">
        <form method="post" class="form form-horizontal">
            <!-- // class="form-horizontal -->
            <section class="col-lg-7">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row form-group">
                    <label asp-for="Advertisement.City.Zip" class="col-lg-3 control-label"></label>
                    <div class="col-lg-2">
                        <input id="City_Zip" asp-for="Advertisement.City.Zip" class="form-control" />
                    </div>
                    <div class="col-lg-4">
                        <input id="City_Name" asp-for="Advertisement.City.Name" class="form-control" readonly>
                    </div>
                    <span asp-validation-for="Advertisement.City.Zip" class="text-danger"></span>
                </div>
                <div class="row form-group">
                    <label asp-for="Advertisement.Address" class="col-lg-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="Advertisement.Address" class="form-control" />
                    </div>
                    <span asp-validation-for="Advertisement.Address" class="text-danger"></span>
                </div>
                <div class="row form-group">
                    <label asp-for="Advertisement.AdvertisementType" class="col-lg-3 control-label"></label>
                    <div class="col-lg-4">
                        <select asp-for="Advertisement.AdvertisementType" asp-items="Html.GetEnumSelectList<AdvertisementType>()" class="form-control"></select>
                    </div>
                    <span asp-validation-for="Advertisement.AdvertisementType" class="text-danger"></span>
                </div>
                <div class="row form-group">
                    <label asp-for="Advertisement.Price" class="col-lg-3 control-label"></label>
                    <div class="input-group col-lg-4">
                        <input asp-for="Advertisement.Price" class="form-control" />
                        <span class="input-group-addon">M Ft</span>
                    </div>
                    <span asp-validation-for="Advertisement.Price" class="col-lg-offset-3 text-danger"></span>
                </div>
                <div class="row form-group">
                    <label asp-for="Advertisement.Size" class="col-lg-3 control-label"></label>
                    <div class="input-group col-lg-4">
                        <input asp-for="Advertisement.Size" class="form-control" />
                        <span class="input-group-addon">m<sup>2</sup></span>
                    </div>
                    <span asp-validation-for="Advertisement.Size" class="col-lg-offset-3 text-danger"></span>
                </div>
                <div class="row form-group">
                    <label asp-for="Advertisement.Room" class="col-lg-3 control-label"></label>
                    <div class="input-group col-lg-4">
                        <input asp-for="Advertisement.Room" class="form-control" />
                        <span class="input-group-addon">szoba</span>
                    </div>
                    <span asp-validation-for="Advertisement.Room" class="col-lg-offset-3 text-danger"></span>
                </div>
                <div class="row form-group">
                    <label asp-for="Advertisement.HalfRoom" class="col-lg-3 control-label"></label>
                    <div class="input-group col-lg-4">
                        <input asp-for="Advertisement.HalfRoom" class="form-control" />
                        <span class="input-group-addon">fél szoba</span>
                    </div>
                    <span asp-validation-for="Advertisement.HalfRoom" class="col-lg-offset-3 text-danger"></span>
                </div>
                <div class="row form-group">
                    <label asp-for="Advertisement.BuildDate" class="col-lg-3 control-label"></label>
                    <div class="col-lg-4">
                        <input asp-for="Advertisement.BuildDate" class="form-control" />
                    </div>
                    <span asp-validation-for="Advertisement.BuildDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Hirdetés feladása" class="btn btn-default" />
                </div>
            </section>
            <section class="col-lg-5">
                <div class="row form-group">
                    <div class="col-lg-12">
                        <label asp-for="Advertisement.Description" class="control-label"></label>
                        <div>
                            <textarea asp-for="Advertisement.Description" class="form-control" rows="6"></textarea>
                            <span asp-validation-for="Advertisement.Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-lg-12">
                        <label asp-for="Advertisement.ImageUrl" class="control-label"></label>
                        <div class="input-group form-control">
                            <input asp-for="Advertisement.ImageUrl" class="form-control" type="text" readonly />
                            <span class="input-group-addon"><input type="button" value="Browse..." /></span>
                        </div>
                        <span asp-validation-for="Advertisement.ImageUrl" class="text-danger"></span>
                    </div>
                </div>
            </section>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Vissza a listához</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $("#City_Zip").on("blur", function (event, b) {
                // Ha nincs megadva irányítószám, akkor nem hívjuk meg az ajaxot.
                if ($("#City_Zip").val() === "")
                    return;
                $.get("/Advertisements/Create?handler=Zip&zip=" + event.currentTarget.value).then(function
                    (data) {
                    $("#City_Name").val(data.name);
                });
            })
        });
    </script>
}
